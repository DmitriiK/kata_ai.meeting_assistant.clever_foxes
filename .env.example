# rename this to '.env' and assign necessary parameters

# Azure Speech Service (REQUIRED for transcription)
AZURE_SPEECH_SERVICE_KEY=your_azure_speech_key_here
AZURE_SPEECH_SERVICE_REGION=eastus

# Language Configuration (OPTIONAL)
# Options: "en-US", "ru-RU", "auto" (default)
# "auto" = automatic detection between English and Russian
SPEECH_LANGUAGE=auto

# Log File Path (OPTIONAL)
# Default: transcriptions.log
TRANSCRIPTION_LOG_FILE=transcriptions.log

# Azure OpenAI (NOT CURRENTLY USED - for future LLM integration)
AZURE_OPENAI_API_KEY=...
AZURE_OPENAI_ENDPOINT=https://ai-proxy.lab.epam.com
